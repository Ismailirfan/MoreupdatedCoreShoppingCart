@model IEnumerable<CoreShoppingCart.Models.Product>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <div class="container-fluid">
                <h3 class="page-title">Create New Products</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)                
            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Slug)
                            </th>

            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PPrice)
            </td>
            <td>
               <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="100">
            </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Slug)
                                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Pid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Pid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Pid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table></div></div></div></div>
